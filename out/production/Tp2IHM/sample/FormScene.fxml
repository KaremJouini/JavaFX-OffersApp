<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.FormController"
          prefHeight="400.0" prefWidth="600.0"
alignment="CENTER">
    <VBox fx:id="formHBox" spacing="15">
        <Button text="Retour" onAction="#backButtonHandler"/>
        <Text textAlignment="CENTER"> Remplissez ce Formulaire </Text>
        <Label text="Offre:"/>
        <TextField fx:id="offreField" disable="true"/>
        <Label text="Nom:"/>
        <TextField fx:id="nomField" />
        <Label text="Adresse:"/>
        <TextField fx:id="adresseField"/>
        <Label text="N°Carte Bancaire:"/>
        <TextField fx:id="carteField"/>
        <Label text="Type Carte Bancaire:"/>
        <ComboBox fx:id="cardTypes"/>
        <Label text="Date d'expiration:"/>
        <DatePicker fx:id="dateField"/>
        <Label text="Code"/>
        <PasswordField fx:id="passField"/>
        <Button text="Imprimer le reçu" onAction="#ImprimerButtonHandler"/>
    </VBox>

</GridPane>
